<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.formularioActivity"
    android:padding="10sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10sp"
        android:layout_marginVertical="10sp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/activity_formulario_imageview"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:src="@drawable/ic_add_a_photo_black_24dp" />

        <Button
            android:id="@+id/activity_formulario_selecionar_foto"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Fotografe seu mapa mental"
            android:layout_marginLeft="50sp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
     <EditText
            android:id="@+id/edittext_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            />

        <EditText
            android:id="@+id/edittext_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição"
            />

        <Button
            android:id="@+id/button_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar"
            />

</LinearLayout>

</LinearLayout>